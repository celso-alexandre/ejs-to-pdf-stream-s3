{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "src/**/*",
  ],
}